{

    "editor.tabSize": 2,
    "mochaExplorer.exit": true,
    "mochaExplorer.files": "src/**/*.test.ts",
    "mochaExplorer.require": "ts-node/register",
    "vscode-coverage-highlighter.defaultState": "enable",
    "lcov.path": [
        "coverage/lcov.info",
    ],
    "lcov.watch": [{
        "pattern": "**/*.ts",
        "command": "npm run test-coverage"
      }],      
    "cSpell.words": [
        "Bioscanner",
        "Comms",
        "DEFVAL",
        "Fortitudes",
        "LOADOUTS",
        "Loadout",
        "Lockpick",
        "MOTHERSHIP",
        "Spacefarer",
        "Spacefarer's",
        "Taxidermied",
        "Ushanka",
        "Vacsuit",
        "Vantablack",
        "Xenomorph",
        "appenders",
        "mschar",
        "msgen",
        "tsbot",
        "typeit",
        "vaccuum"
    ]
}